<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d6d7d8"
    tools:context=".bookPigActivity">

    <Spinner
        android:id="@+id/month_dropdown"
        android:layout_width="147dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/textView"
        android:layout_toEndOf="@+id/textView"
        android:background="#f0f0f0" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="121dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="45dp"
        android:layout_marginTop="35dp"
        android:text="บัญชี"
        android:textSize="30sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/food"
        android:layout_width="315dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="93dp"
        android:background="#f0f0f0"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/food_textview"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="อาหาร"
            android:textSize="24sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/food_edittext"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="number" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/address"
        android:layout_width="314dp"
        android:layout_height="55dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="34dp"
        android:layout_marginTop="167dp"
        android:layout_weight="1"
        android:background="#f0f0f0"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/add_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ที่พัก"
            android:textSize="24sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/add_edittext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="number" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/total"
        android:layout_width="318dp"
        android:layout_height="55dp"
        android:layout_centerInParent="true"
        android:background="#5697ad"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="เหลือ"
            android:textSize="24sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editText3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="number" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="316dp"
        android:layout_height="46dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="182dp"
        android:background="#f0f0f0" />

    <ImageButton
        android:id="@+id/addPig_button"
        android:layout_width="193dp"
        android:layout_height="68dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView"
        android:layout_marginStart="-45dp"
        android:background="#b2b2b2"
        android:src="@drawable/ic_in_button" />

    <ImageButton
        android:id="@+id/bookPig_button"
        android:layout_width="191dp"
        android:layout_height="69dp"
        android:layout_alignEnd="@+id/month_dropdown"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="-71dp"
        android:background="#5697ad"
        android:src="@drawable/ic_book_button" />

</RelativeLayout>